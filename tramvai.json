{
  "$schema": "./node_modules/@tramvai/cli/schema.json",
  "projects": {
    "subscript": {
      "name": "subscript",
      "root": "src",
      "type": "application",
      "commands": {
        "build": {
          "options": {
            "server": "src/index.ts",
            "vendor": "src/vendor.ts"
          },
          "configurations": {
            "sourceMap": true,
            "modern": true,
            "granularChunks": true,
            "postcss": {
              "config": "src/postcss"
            },
            "alias": {
              "app": "./src/app",
              "bundles": "./src/bundles",
              "modules": "./src/modules",
              "pages": "./src/pages",
              "layout": "./src/layout",
              "shared": "./src/shared"
            }
          }
        },
        "serve": {
          "configurations": {
            "hotRefresh": true,
            "modern": true
          }
        }
      }
    }
  }
}
